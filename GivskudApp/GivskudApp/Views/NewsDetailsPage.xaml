<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="GivskudApp.Views.NewsDetailsPage">

    <ContentPage.Content>
        <StackLayout BackgroundColor="#FFFFFF" Padding="10,10,10,10">
            <Label Text="{Binding SelectedNews.Title}" FontSize="Medium" TextColor="#000000"/>
            <Label Text="{Binding SelectedNews.PublishDate, StringFormat='{}{0:MM/dd/yyyy}'}" FontSize="Micro" TextColor="#B0B0B0"/>
            <BoxView HeightRequest="1" BackgroundColor="#D3D3D3"/>
            <Image Source="{Binding SelectedNews.Image}" HorizontalOptions="FillAndExpand" Margin="0,0,0,15"/>
            <Label Text="{Binding SelectedNews.BodyText}"/>
        </StackLayout>
    </ContentPage.Content>

</ContentPage>